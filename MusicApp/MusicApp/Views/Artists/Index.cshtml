@model IEnumerable<MusicApp.Models.Artist>

@{
    /**/

    ViewBag.Title = "Index";
}

<h2>Artist Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@foreach (var item in Model)
{
    <div class="row">
            <div class="col-md-3 LeftAlbumCover">
                <img src="@Html.DisplayFor(modelItem => item.Photo)" class="image-create" />
            </div>
            <div class="col-md-9 RightAlbumCover">
                <h1>@Html.DisplayFor(modelItem => item.ArtistName)</h1>

            </div>
      
    </div><!--Row End-->
    <div class="row">
        <div class="col-md-12 buttonsArtist">
            <button class="buttonMain"> @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID })
            </button> 
            <button class="buttonMain"> @Html.ActionLink("Details", "Details", new { id = item.ArtistID })
            </button>
            <button class="buttonMain">
                @Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })
            </button>
        </div>
    </div>

}






















